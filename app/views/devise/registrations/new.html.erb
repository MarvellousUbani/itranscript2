
<div class="relative bg-white overflow-hidden">
  <div class="mx-auto">
    <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:w-full lg:pb-28 xl:pb-32">
      <svg class="hidden lg:block absolute right-0 inset-y-0 h-full w-48 text-white transform translate-x-1/2" fill="currentColor" viewBox="0 0 100 100" preserveAspectRatio="none" aria-hidden="true">
        <polygon points="50,0 100,0 50,100 0,100" />
      </svg>

      <div class="relative pt-6 px-4 sm:px-6 lg:px-8">
        <nav class="relative flex items-center justify-between sm:h-10 lg:justify-start" aria-label="Global">
          <div class="flex items-center flex-grow flex-shrink-0 lg:flex-grow-0">
            <div class="flex items-center justify-between w-full md:w-auto">
              <a href="#">
                <span class="sr-only">Workflow</span>
                <img class="h-8 w-auto sm:h-10" src="https://www.dailyschoolnews.com.ng/wp-content/uploads/2017/09/UNIPORT.png">
              </a>
              <div class="-mr-2 flex items-center md:hidden">
                <button type="button" class="bg-white rounded-md p-2 inline-flex items-center justify-center text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500" aria-expanded="false">
                  <span class="sr-only">Open main menu</span>
                  <!-- Heroicon name: outline/menu -->
                  <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                  </svg>
                </button>
              </div>
            </div>
          </div>
          <div class="hidden md:block md:ml-10 md:pr-4 md:space-x-8">
            <a href="/" class="font-medium text-gray-500 hover:text-gray-900">Home</a>
            <% unless current_user %>
            <%= link_to "Get Started", new_user_registration_path, :class => "font-medium text-gray-600 hover:text-blue-500" %>
            <%= link_to "Log in", new_user_session_path, :class => "font-medium text-gray-600 hover:text-blue-500" %>
            <% else %>
            <%= link_to "Logout", destroy_user_session_path, {:class => 'font-medium text-gray-600 hover:text-blue-500', method: :delete } %>
            <% end %>
          </div>
        </nav>
      </div>

      <!--
        Mobile menu, show/hide based on menu open state.

        Entering: "duration-150 ease-out"
          From: "opacity-0 scale-95"
          To: "opacity-100 scale-100"
        Leaving: "duration-100 ease-in"
          From: "opacity-100 scale-100"
          To: "opacity-0 scale-95"
      -->
      <div class="inset-x-0 p-2 transition transform origin-top-right md:hidden">
        <div class="rounded-lg shadow-md bg-white ring-1 ring-black ring-opacity-5 overflow-hidden">
          <div class="px-5 pt-4 flex items-center justify-between">
            <div class="-mr-2">
              <button type="button" class="bg-white rounded-md p-2 inline-flex items-center justify-center text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500">
                <span class="sr-only">Close main menu</span>
                <!-- Heroicon name: outline/x -->
                <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
          </div>
          <div class="px-2 pt-2 pb-3 space-y-1">
            <a href="/" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">Home</a>

          </div>

          <% unless current_user %>
          <%= link_to "Get Started", new_user_registration_path, :class => "block w-full px-5 py-3 text-center font-medium text-blue-600 bg-gray-50 hover:bg-gray-100" %>
          <%= link_to "Log in", new_user_session_path, :class => "block w-full px-5 py-3 text-center font-medium text-blue-600 bg-gray-50 hover:bg-gray-100" %>
          <% else %>
          <%= link_to "Sign Out", destroy_user_session_path, :method => :delete, :data => { :no_turbolink => true }, :class => "block w-full px-5 py-3 text-center font-medium text-blue-600 bg-gray-50 hover:bg-gray-100" %>

          <%= link_to "Edit", edit_user_registration_path, :class=> "block w-full px-5 py-3 text-center font-medium text-blue-600 bg-gray-50 hover:bg-gray-100" %>
          <% end %>
        </div>
      </div>


<main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">   

<div class="w-full bg-blue-500 p-8 text-center">
  <h1 class="text-2xl tracking-tight font-extrabold text-white sm:text-3xl md:text-4xl">Begin Application Process</h1>

</div>
    <div class="container max-w-7xl mx-auto py-16 px-8" id="transcript-application">
      
          <div class="mt-5 md:mt-0 md:col-span-2">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="shadow sm:rounded-md sm:overflow-hidden">
                <div class="px-4 py-5 bg-white space-y-6 sm:p-6">

                  <div class="flex flex-row">
                    <div class="flex-1 mr-2">
                    <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %><br />
                    <%= f.text_field :first_name,required: true,  autofocus: true, autocomplete: "first_name", class: "mt-1 p-2 border border-gray-300 w-full focus:outline-none" %>  
                    </div>

                    <div class="flex-1">
                    <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %><br />
                    <%= f.text_field :last_name, autofocus: true,required: true,  autocomplete: "last_name", class: "mt-1 p-2 border border-gray-300 w-full focus:outline-none" %>    
                    </div>
                  </div>

                  <div class="flex flex-row">
                    <div class="flex-1 mr-2">
                    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %><br />
                    <%= f.text_field :email,required: true,  autofocus: true, autocomplete: "email", class: "mt-1 p-2 border border-gray-300 w-full focus:outline-none" %>  
                    </div> 
                    <div class="flex-1">
                    <%= f.label :phone_number,  class: "block text-sm font-medium text-gray-700" %><br />
                    <%= f.text_field :phone_number, required: true,  autofocus: true, autocomplete: "phone_number", class: "mt-1 p-2 border border-gray-300 w-full focus:outline-none" %>     
                    </div>
                  </div>

                  <div class="flex flex-row">
                    <div class="flex-1 mr-2">
                    <%= f.label :department, class: "block text-sm font-medium text-gray-700" %><br />
                    <%= f.text_field :department,required: true,  autofocus: true, autocomplete: "department", class: "mt-1 p-2 border border-gray-300 w-full focus:outline-none" %>  
                    </div> 
                    <div class="flex-1">
                    <%= f.label :faculty,  class: "block text-sm font-medium text-gray-700" %><br />
                    <%= f.text_field :faculty, required: true,  autofocus: true, autocomplete: "faculty", class: "mt-1 p-2 border border-gray-300 w-full focus:outline-none" %>     
                    </div>
                  </div>

                  <div class="flex flex-row">
                    <div class="flex-1 mr-2">
                    <%= f.label :senate_meeting_no, class: "block text-sm font-medium text-gray-700" %><br />
                    <%= f.text_field :senate_meeting_no ,required: true,  autofocus: true, autocomplete: ":senate_meeting_no", class: "mt-1 p-2 border border-gray-300 w-full focus:outline-none" %>  
                    </div> 
                    <div class="flex-1">
                    <%= f.label :date_of_award,  class: "block text-sm font-medium text-gray-700" %><br />
                    <%= f.date_field :date_of_award, required: true,  autofocus: true, autocomplete: "date_of_award", class: "mt-1 p-2 border border-gray-300 w-full focus:outline-none" %>     
                    </div>
                  </div>

                  <div class="flex flex-row">
                    
                    <div class="flex-1">
                    <%= f.label :date_of_birth,  class: "block text-sm font-medium text-gray-700" %><br />
                    <%= f.date_field :date_of_birth, required: true,  autofocus: true, autocomplete: "date_of_birth", class: "mt-1 p-2 border border-gray-300 w-full focus:outline-none" %>     
                    </div>
                  </div>
                    

                  <div class="flex flex-row">
                    <div class="flex-1 mr-2">
                    <label class="block text-sm font-medium text-gray-700 mb-6"> Matriculation/Registration Number </label>
                    <%= f.text_field :matriculation_number,required: true, autofocus: true, autocomplete: "matriculation_number", class: "mt-1 p-2 border border-gray-300 w-full focus:outline-none" %>  
                    </div>
                    <div class="flex-1">
                    <label class="block text-sm font-medium text-gray-700 mb-6"> Transcript to be Addressed To (Give full Address) </label>
                    <%= f.text_field :institution_sent, required: true, autofocus: true, autocomplete: "institution_sent", class: "mt-1 p-2 border border-gray-300 w-full focus:outline-none" %>      
                    </div>
                  </div>

                  <div class="flex flex-row">
                  <div class="flex-1 mr-2">
                    <%= f.label :password %>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 p-2 border border-gray-300 w-full focus:outline-none" %>
                    </div>
                  </div>

                  <div class="flex flex-row">
                  <div class="flex-1 mr-2">
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 p-2 border border-gray-300 w-full focus:outline-none" %>
                    </div>
                  </div>

                  <div class="flex flex-row">
                    <div class="flex-1 mr-2">
                    <%= f.label :street_address, class: "block text-sm font-medium text-gray-700" %><br />
                    <%= f.text_field :street_address,required: true, autofocus: true, autocomplete: "street_address", class: "mt-1 p-2 border border-gray-300 w-full focus:outline-none" %>  
               
                    </div>

                    <div class="flex-1">
                      <div>
                        <label class="block text-sm font-medium text-gray-700">
                          Photo
                        </label>
                        <div class="mt-1 flex items-center">
                          <span class="inline-block h-12 w-12 rounded-full overflow-hidden bg-gray-100">
                            <svg class="h-full w-full text-gray-300" fill="currentColor" viewBox="0 0 24 24">
                              <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
                            </svg>
                          </span>
                          
                          <%= f.file_field :avatar,required: true,  class: "ml-4" %>
                        </div>
                      </div>
                      </div>
                  </div>

                  <div class="field">
                  <label class="block text-sm font-medium text-gray-700 mb-6"> Upload Certificate / Proof of Graduation </label>
                  <%= f.file_field :upload, required: true  %>
                  </div>

                </div>
      
               <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
               
               <%= f.submit "Begin Application", class: "application-btn inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>

                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
      <div class="hidden sm:block" aria-hidden="true">
        <div class="py-5">
          <div class="border-t border-gray-200"></div>
        </div>
      </div>
